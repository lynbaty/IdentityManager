@model UserClaimDto

<h1 class="text-info">Manage User</h1>

<form asp-controller="User" asp-action="ManageClaim" role="form" method="post">
    <h4>Edit user claims</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <input hidden asp-for="UserId" />
    <div class="form-group">
        @for (int i= 0; i < Model.Claims.Count;i++)
            {
        <div class="form-check">
            <input hidden asp-for="Claims[i].ClaimType">
            <input class="form-check-input" asp-for="Claims[i].IsSelected">
            <label class="form-check-label" asp-for="Claims[i].IsSelected">@Model.Claims[i].ClaimType</label>
        </div>
            }
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <button type="submit" class="btn btn-success">Update</button>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}