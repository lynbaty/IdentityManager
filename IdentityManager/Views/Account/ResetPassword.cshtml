@model ResetPasswordDto

<h1 class="text-info">ResetPassword</h1>

<form asp-controller="Account" asp-action="ResetPassword" role="form" method="post">
    <h4>Enter new password</h4>
    <hr />
    <input hidden asp-for="Code"/>
    <input hidden asp-for="UserId"/>
    <div class="form-group">
        <label class="col-md-2" asp-for="NewPassword"></label>
        <div class="col-md-10">
            <input type="password" class="form-control" asp-for="NewPassword" />
            <span class="text-danger" asp-validation-for="NewPassword"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2" asp-for="ConfirmPassword"></label>
        <div class="col-md-10">
            <input type="password" class="form-control" asp-for="ConfirmPassword" />
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}