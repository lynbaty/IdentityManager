@using IdentityManager.Dtos
@model ForgotPasswordDto

<h1 class="text-info">Forgot password?</h1>

<form asp-controller="Account" asp-action="ForgotPassword" role="form" method="post">
    <div class="row">
        <div class="col-md-8">
            <h4>Please enter your email</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="col-md-2" asp-for="Email"></label>
                <div class="col-md-10">
                    <input type="text" class="form-control" asp-for="Email" />
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    </div>
</form>

@section Scripts{
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}