@model UserDto

<h1 class="text-info">Edit User</h1>

<form asp-controller="User" asp-action="Edit" role="form" method="post">
    <h4>Edit role's name</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <input hidden asp-for="Id" />
    <div class="form-group">
        <label class="col-md-2" asp-for="Email"></label>
        <div class="col-md-10">
            <input disabled type="text" class="form-control" asp-for="Email" />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2" asp-for="Name"></label>
        <div class="col-md-10">
            <input type="text" class="form-control" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2" asp-for="RoleSelected"></label>
        <div class="col-md-10">
            <select asp-for="RoleSelected" asp-items="@Model.RoleList" class="form-control">
                <option disabled selected>--choose your role--</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <button type="submit" class="btn btn-success">Update</button>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}