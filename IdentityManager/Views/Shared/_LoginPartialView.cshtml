@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<ul class="navbar-nav">
    @{

        if (SignInManager.IsSignedIn(User))

        {
            <li class="nav-item">
                <span class="nav-link">Hello <strong>@UserManager.GetUserName(User)</strong></span>
            </li>
            <li class="nav-item">
                <form asp-action="Logout" asp-controller="Account" method="post">
                    <button type="submit" class="btn nav-link">Logout</button>
                </form>
            </li>

        }
        else

        {
            <li class="nav-item">
                <a class="nav-link" asp-action="Register" asp-controller="Account">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Login" asp-controller="Account">Login</a>
            </li>

        }
    }
</ul>