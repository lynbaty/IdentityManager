@using IdentityManager.Dtos;
@model ExternalLoginDto

<h1 class="text-info">External Login Confirm</h1>

<form asp-controller="Account" asp-action="ExternalLoginConfirmed" asp-route-returnurl="@ViewData["ReturnUrl"]" role="form" method="post">
    <h5>Update your information</h5>
    <p>You login with @ViewData["ProviderDisplayName"] .Please check your information and click register button below to register new account</p>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label class="col-md-2" asp-for="Email"></label>
        <div class="col-md-10">
            <input type="text" class="form-control" asp-for="Email" />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2" asp-for="Name"></label>
        <div class="col-md-10">
            <input type="text" class="form-control" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <button type="submit" class="btn btn-success">Register</button>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}